{
	"name": "node-bulma",
	"version": "1.0.0",
	"description": "Customize bulma using npm/yarn and node-sass",
	"main": "sass/mystyles.scss",
	"scripts": {
		"css-build": "node-sass --omit-source-map-url sass/mystyles.scss css/mystyles.css",
		"css-watch": "npm run css-build -- --watch",
		"start": "npm run css-watch"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/killshot13/mybulma.git"
	},
	"keywords": [
		"bulma",
		"sass",
		"scss",
		"styles",
		"template",
		"node-sass",
		"node-bulma"
	],
	"author": "killshot13",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/killshot13/mybulma/issues"
	},
	"homepage": "https://github.com/killshot13/mybulma#readme",
	"devDependencies": {
		"bulma": "0.9.2",
		"node-sass": "7.0.0"
	}
}
